<!DOCTYPE html>
<html>
<head>
  <title>Fácil</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
	<%= favicon_link_tag %>
	<link
href='http://fonts.googleapis.com/css?family=Pacifico&text=fácil/admin' rel='stylesheet' type='text/css'>
	<link
href='http://fonts.googleapis.com/css?family=Maven+Pro:regular,bold' rel='stylesheet' type='text/css'>
</head>
<body>
<div>
	<div id="header_frame">
	<div id="header">
		<span id="logo">fácil <% if admin %> /admin <% end %> </span>

		<div id="user_nav">

			<% if current_user %>
				<b><i><%= current_user.email %></i></b>
				<%= link_to "Log out", log_out_path %>
			<% elsif admin %>
				Logged in as <%= admin.login %>.
				<%= link_to "Log out", admin_log_out_path %>
			<% end %>

		</div>
		
		<% if current_user %>
			<div id="menu">
				<%= link_to 'navigate', tipos_path %>
				<%= link_to 'me', tipos_path%>
				<%= link_to 'accions', accions_path %>
			</div>

		<% elsif admin %>
			<div id="menu">
				<%= link_to 'navigate', tipos_path %>
				<%= link_to 'autoridads', autoridads_path %>
				<%= link_to 'stats', tipos_path %>
			</div>
		<% end %>		
	</div>
	</div>

	<div id="main"/>
		<div id="content">
			<div id="flash">
				<% flash.each do |name, msg| %>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
				<% end %>
			</div>
			<%= yield %>
		</div>
		<div id="footer">
				
			All rights reserved <%= link_to "Lopet", admin_log_in_path %> & Melisson 2011
		</div>
	</div>
</div>
</body>
</html>
