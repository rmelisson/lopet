<!DOCTYPE html>
<html>
<head>
  <title>Lopet</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="page">
		<h1>Facil <% if admin %> / admin <% end %> </h1>

		<div id="user_nav">

			<% if current_user %>
				<b><i><%= current_user.email %></i></b>
				<%= link_to "Log out", log_out_path %>
			<% elsif admin %>
				Logged in as <%= admin.login %>.
				<%= link_to "Log out", admin_log_out_path %>
			<% end %>

		</div>

		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>
		
		<% if current_user %>
			<div id="menu">
				<%= link_to 'navigate', tipos_path %>
				<%= link_to 'me', tipos_path%>
				<%= link_to 'accions', accions_path %>
			</div>

		<% elsif admin %>
			<div id="menu">
				<%= link_to 'navigate', tipos_path %>
				<%= link_to 'stats', tipos_path %>
			</div>
		<% end %>		

		<div id="content">
			<%= yield %>
		</div>
		<div id="footer">
				
			All rights reserved <%= link_to "Lopet", admin_log_in_path %> & Melisson 2011
		</div>
	</div>
</body>
</html>
