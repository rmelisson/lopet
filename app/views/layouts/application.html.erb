<!DOCTYPE html>
<html>
<head>
  <title>Lopet</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="page">
		<h1>Facil</h1>
		<div id="user_nav">
			<% if current_user %>
				Logged in as <%= current_user.email %>.
				<%= link_to "Log out", log_out_path %>
			<% else %>
				<%= link_to "Sign up", sign_up_path %> or
				<%= link_to "log in", log_in_path %>
			<% end %>
		</div>
		<p class="notice"><%= notice %></p>
		<div id="content">
			<%= yield %>
		</div>
		<div id="footer">
			All rights reserved Lopet & Melisson 2011
		</div>
	</div>
</body>
</html>
