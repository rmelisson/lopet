<h2>Tipos de derechos fundamentales</h2>

<% if admin %>
	<%= link_to 'New Tipo', new_tipo_path %>
<% end %>

<br />

<ul>
	<% @tipos.each do |tipo| %>
		<li>
			<h4><%= tipo.title %></h4>
			<p><%= tipo.description %></p>
			<% if admin %>
    		<%= link_to 'Edit', edit_tipo_path(tipo) %>
    		<%= link_to 'Destroy', tipo, :confirm => 'Are you sure?', :method => :delete %>
			<% end %>
			<ul>
				<% tipo.derechos.each do |derecho| %>
					<li> <%= link_to derecho.title, view_derecho_path(:id =>
derecho.id) %> </li>
				<% end %>
			</ul>
		</li>
	<% end %>
</ul>

<br />

